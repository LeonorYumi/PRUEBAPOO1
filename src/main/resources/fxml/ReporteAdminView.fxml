<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-padding: 30; -fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.admin.ReporteAdminController">

    <Label text="REPORTES Y ESTADÍSTICAS" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <GridPane hgap="15" vgap="15" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Fecha Inicio:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <DatePicker fx:id="dpInicio" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Fecha Fin:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <DatePicker fx:id="dpFin" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

        <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="cbEstado" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Tipo Licencia:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <ComboBox fx:id="cbTipoLicencia" prefWidth="150" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

        <Label text="Cédula:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtCedulaFiltro" promptText="Filtrar por cédula..." GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="3" GridPane.rowIndex="2">
            <Button text="Buscar" onAction="#handleBuscar" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Exportar" onAction="#handleExportar" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        </HBox>
    </GridPane>

    <TableView fx:id="tableReportes" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
            <TableColumn fx:id="colCedula" text="Cédula" prefWidth="120"/>
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
            <TableColumn fx:id="colFecha" text="Fecha Registro" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="30" alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #2c3e50; -fx-background-radius: 5;">
        <HBox spacing="10">
            <Label text="Total Trámites:" style="-fx-text-fill: white;"/>
            <Label fx:id="lblTotalTramites" text="0" style="-fx-text-fill: #f1c40f; -fx-font-weight: bold;"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Aprobados:" style="-fx-text-fill: white;"/>
            <Label fx:id="lblTotalAprobados" text="0" style="-fx-text-fill: #2ecc71; -fx-font-weight: bold;"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Rechazados:" style="-fx-text-fill: white;"/>
            <Label fx:id="lblTotalRechazados" text="0" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
        </HBox>
    </HBox>
</VBox>