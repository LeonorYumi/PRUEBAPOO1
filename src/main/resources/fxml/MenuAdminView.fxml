<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="1100.0" style="-fx-background-color: #f8f9fa;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.admin.AdminController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20"
              style="-fx-background-color: white; -fx-padding: 0 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 5);">
            <children>
                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                </ImageView>
                <VBox alignment="CENTER_LEFT">
                    <Label text="SISTEMA DE LICENCIAS" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 16px;" />
                    <Label text="Panel de Administración y Control" style="-fx-text-fill: #95a5a6; -fx-font-size: 11px;" />
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER" spacing="15">
                    <VBox alignment="CENTER_RIGHT">
                        <Label text="Administrador" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
                        <Label text="Sesión Activa" style="-fx-text-fill: #2ecc71; -fx-font-size: 10px;" />
                    </VBox>
                    <Button fx:id="btnCerrarSesion" onAction="#handleCerrarSesion" prefHeight="35.0" text="Cerrar Sesión"
                            style="-fx-background-color: transparent; -fx-border-color: #e74c3c; -fx-border-radius: 20; -fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 0 20;" />
                </HBox>
            </children>
        </HBox>
    </top>

    <left>
        <VBox prefWidth="260.0" spacing="8" style="-fx-background-color: #2c3e50; -fx-padding: 25 15;">
            <children>
                <Label text="OPERACIONES" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold; -fx-font-size: 10px; -fx-padding: 0 0 5 10;" />

                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#handleRegistrarSolicitante" prefHeight="45.0" text="Registrar Solicitante"
                        style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-cursor: hand; -fx-font-size: 13px; -fx-background-radius: 8; -fx-padding: 0 0 0 20;" />

                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#handleVerificarRequisitos" prefHeight="45.0" text="Verificar Requisitos"
                        style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-cursor: hand; -fx-font-size: 13px; -fx-background-radius: 8; -fx-padding: 0 0 0 20;" />

                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#handleRegistrarExamenes" prefHeight="45.0" text="Registrar Exámenes"
                        style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-cursor: hand; -fx-font-size: 13px; -fx-background-radius: 8; -fx-padding: 0 0 0 20;" />

                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#handleGestionTramites" prefHeight="45.0" text="Gestión de Trámites"
                        style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-cursor: hand; -fx-font-size: 13px; -fx-background-radius: 8; -fx-padding: 0 0 0 20;" />

                <Separator opacity="0.1" style="-fx-padding: 15 0;" />

                <Label text="ADMINISTRACIÓN" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold; -fx-font-size: 10px; -fx-padding: 0 0 5 10;" />

                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#handleGestionUsuarios" prefHeight="45.0" text="Gestión de Usuarios"
                        style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-cursor: hand; -fx-font-size: 13px; -fx-background-radius: 8; -fx-padding: 0 0 0 20;" />

                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#handleReportes" prefHeight="45.0" text="Reportes y Estadísticas"
                        style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-cursor: hand; -fx-font-size: 13px; -fx-background-radius: 8; -fx-padding: 0 0 0 20;" />

                <Region VBox.vgrow="ALWAYS" />

                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgba(0,0,0,0.2); -fx-padding: 15; -fx-background-radius: 10;">
                    <children>
                        <Label text="Versión del Sistema" style="-fx-text-fill: #95a5a6; -fx-font-size: 10px;" />
                        <Label text="v1.1.0 - 2026" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11px;" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f4f7f6;">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <VBox alignment="CENTER" spacing="25" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 15, 0, 0, 0);">
                    <children>
                        <ImageView fitHeight="150.0" fitWidth="150.0" opacity="0.1">
                            <image>
                                <Image url="@../images/logo.png" />
                            </image>
                        </ImageView>

                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <Label text="BIENVENIDO, ADMINISTRADOR"
                                       style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: 'System';" />
                                <Separator maxWidth="200" style="-fx-opacity: 0.3;" />
                                <Label text="Seleccione una operación en el menú lateral para gestionar el sistema."
                                       style="-fx-text-fill: #7f8c8d; -fx-font-size: 15px;" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
</BorderPane>