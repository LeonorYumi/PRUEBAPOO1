<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../css/app.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.admin.AdminController">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 10 20;">
            <Label text="SISTEMA DE LICENCIAS - PANEL ADMINISTRADOR"
                   style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Sesión: Administrador" style="-fx-text-fill: #bdc3c7;" />
            <Button fx:id="btnCerrarSesion" text="Cerrar Sesión" onAction="#handleCerrarSesion"
                    focusTraversable="false"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-width: 0 1 0 0;" prefWidth="250.0">

            <Label text="OPERACIONES DE TRÁMITE" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 11;" />
            <VBox spacing="5">
                <Button text="Registrar Solicitante" onAction="#handleRegistrarSolicitante" focusTraversable="false"
                        maxWidth="Infinity" alignment="BASELINE_LEFT" styleClass="menu-item-button" style="-fx-cursor: hand;" />
                <Button text="Verificar Requisitos" onAction="#handleVerificarRequisitos" focusTraversable="false"
                        maxWidth="Infinity" alignment="BASELINE_LEFT" styleClass="menu-item-button" style="-fx-cursor: hand;" />
                <Button text="Registrar Exámenes" onAction="#handleRegistrarExamenes" focusTraversable="false"
                        maxWidth="Infinity" alignment="BASELINE_LEFT" styleClass="menu-item-button" style="-fx-cursor: hand;" />
                <Button text="Gestión de Trámites" onAction="#handleGestionTramites" focusTraversable="false"
                        maxWidth="Infinity" alignment="BASELINE_LEFT" styleClass="menu-item-button" style="-fx-cursor: hand;" />
            </VBox>

            <Separator style="-fx-padding: 10 0 10 0;" />

            <Label text="CONTROL ADMINISTRATIVO" style="-fx-font-weight: bold; -fx-text-fill: #2980b9; -fx-font-size: 11;" />
            <VBox spacing="5">
                <Button text="Gestión de Usuarios" onAction="#handleGestionUsuarios" focusTraversable="false"
                        maxWidth="Infinity" alignment="BASELINE_LEFT" styleClass="menu-item-button"
                        style="-fx-cursor: hand;" />

                <Button text="Reportes y Estadísticas" onAction="#handleReportes" focusTraversable="false"
                        maxWidth="Infinity" alignment="BASELINE_LEFT" styleClass="menu-item-button" style="-fx-cursor: hand;" />

            </VBox>

            <Region VBox.vgrow="ALWAYS" />
            <Label text="v1.0.2 - 2024" style="-fx-text-fill: #95a5a6; -fx-font-size: 10;" alignment="CENTER" maxWidth="Infinity" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f4f7f6; -fx-padding: 20;">
            <VBox alignment="CENTER" spacing="20">
                <ImageView fitHeight="150.0" fitWidth="150.0" opacity="0.2">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                </ImageView>
                <VBox alignment="CENTER" spacing="5">
                    <Label text="BIENVENIDO AL SISTEMA" style="-fx-text-fill: #2c3e50; -fx-font-size: 26px; -fx-font-weight: bold;" />
                    <Label text="Módulo de Administración y Control" style="-fx-text-fill: #34495e; -fx-font-size: 16px;" />
                </VBox>
                <Label text="Utilice el menú de la izquierda para gestionar usuarios, trámites o consultar reportes."
                       style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>