<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../css/app.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.admin.AdminController">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label text="PANEL DE CONTROL - ADMINISTRADOR" style="-fx-text-fill: white; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnCerrarSesion" text="Cerrar Sesión" onAction="#handleCerrarSesion"
                    styleClass="login-button" style="-fx-background-color: #e74c3c;" />
        </HBox>
    </top>

    <left>
        <VBox spacing="8" style="-fx-background-color: #ecf0f1; -fx-padding: 15;" prefWidth="240.0">
            <Label text="OPERACIONES (ANALISTA)" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 11;" />
            <Button text="Registrar Solicitante" maxWidth="Infinity" styleClass="menu-item-button" />
            <Button text="Verificar Requisitos" maxWidth="Infinity" styleClass="menu-item-button" />
            <Button text="Registrar Exámenes" maxWidth="Infinity" styleClass="menu-item-button" />
            <Button text="Gestión de Trámites" maxWidth="Infinity" styleClass="menu-item-button" />

            <Separator style="-fx-padding: 10 0 10 0;" />

            <Label text="ADMINISTRACIÓN" style="-fx-font-weight: bold; -fx-text-fill: #2980b9; -fx-font-size: 11;" />
            <Button text="Gestión de Usuarios" maxWidth="Infinity" styleClass="menu-item-button" />
            <Button text="Reportes y Estadísticas" maxWidth="Infinity" styleClass="menu-item-button" />
            <Button text="Dashboard de Totales" maxWidth="Infinity" styleClass="menu-item-button" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: white; -fx-padding: 25;">
            <VBox alignment="CENTER" spacing="15">
                <ImageView fitHeight="120.0" fitWidth="120.0" opacity="0.15">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                </ImageView>
                <Label text="Bienvenido, Administrador" style="-fx-text-fill: #2c3e50; -fx-font-size: 22px; -fx-font-weight: bold;" />
                <Label text="Seleccione una opción del menú lateral para comenzar" style="-fx-text-fill: #95a5a6;" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>