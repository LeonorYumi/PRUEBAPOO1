<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<AnchorPane prefHeight="550.0" prefWidth="400.0" styleClass="main-container"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.login.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="40.0" prefWidth="300.0">

            <ImageView fitHeight="110.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/logo.png" />
                </image>
            </ImageView>

            <VBox alignment="CENTER" spacing="5.0">
                <Label text="SISTEMA DE LICENCIAS" styleClass="header-label"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <Label text="Inicio de Sesión Seguro" styleClass="subheader-label"
                       style="-fx-text-fill: #7f8c8d;" />
            </VBox>

            <Separator prefWidth="250.0" />

            <VBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Tipo de Usuario:" styleClass="field-label" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="comboUsuario" prefWidth="300.0" promptText="Seleccione su rol...">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Administrador" />
                            <String fx:value="Analista" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Usuario:" styleClass="field-label" style="-fx-font-weight: bold;" />
                <TextField fx:id="txtUsuario" promptText="Ingrese su usuario" prefHeight="35.0" />

                <Label text="Contraseña:" styleClass="field-label" style="-fx-font-weight: bold;" />
                <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña" prefHeight="35.0" />
            </VBox>

            <VBox spacing="12.0" prefWidth="300.0" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="btnLogin" onAction="#handleLogin" prefHeight="45.0" prefWidth="300.0"
                        text="INGRESAR AL SISTEMA"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />

                <Button fx:id="btnSalir" onAction="#handleExit" prefHeight="40.0" prefWidth="300.0"
                        text="SALIR"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
            </VBox>

        </VBox>
    </children>
</AnchorPane>