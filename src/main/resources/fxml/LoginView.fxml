<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<StackPane prefHeight="600.0" prefWidth="850.0" style="-fx-background-color: #f0f2f5;"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ui.login.LoginController">

    <stylesheets>
        <URL value="@../css/app.css" />
    </stylesheets>

    <children>
        <VBox alignment="CENTER" maxHeight="560.0" maxWidth="480.0" spacing="25.0" styleClass="card">
            <padding>
                <Insets bottom="40.0" left="45.0" right="45.0" top="40.0" />
            </padding>
            <children>
                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                </ImageView>

                <VBox alignment="CENTER" spacing="5.0">
                    <Label text="SISTEMA DE LICENCIAS" styleClass="header-label" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label text="Bienvenido, por favor identifíquese" styleClass="subheader-label" />
                </VBox>

                <VBox spacing="18.0">
                    <VBox spacing="8.0">
                        <Label text="Tipo de Usuario" styleClass="field-label" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="comboUsuario" maxWidth="Infinity" prefHeight="48.0" promptText="Seleccione su rol..." styleClass="input-field">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Administrador" />
                                    <String fx:value="Analista" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>

                    <VBox spacing="8.0">
                        <Label text="Usuario" styleClass="field-label" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtUsuario" prefHeight="48.0" promptText="Nombre de usuario" styleClass="input-field" />
                    </VBox>

                    <VBox spacing="8.0">
                        <Label text="Contraseña" styleClass="field-label" style="-fx-font-weight: bold;" />
                        <PasswordField fx:id="txtPassword" prefHeight="48.0" promptText="••••••••" styleClass="input-field" />
                    </VBox>
                </VBox>

                <VBox spacing="12.0" style="-fx-padding: 5 0 0 0;">
                    <Button fx:id="btnLogin" maxWidth="Infinity" onAction="#handleLogin" prefHeight="50.0" text="INGRESAR AL SISTEMA" styleClass="login-button" />
                    <Button fx:id="btnSalir" maxWidth="Infinity" onAction="#handleExit" prefHeight="45.0" text="SALIR" styleClass="button-logout" />
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>