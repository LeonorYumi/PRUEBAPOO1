<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 30; -fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.analista.RegistrarSolicitanteController">

    <Label text="REGISTRO DE NUEVO SOLICITANTE" styleClass="header-label" style="-fx-text-fill: #2c3e50;"/>
    <Label text="Complete los datos para iniciar el trámite de licencia" styleClass="subheader-label"/>

    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <Label text="Cédula / DNI:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtCedula" promptText="Ingrese identificación" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Nombre Completo:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtNombre" promptText="Nombres y Apellidos" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Tipo de Licencia:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="comboLicencia" prefWidth="200" promptText="Seleccione..." GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Fecha Solicitud:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <DatePicker fx:id="dateSolicitud" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Guardar" onAction="#handleGuardar" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button text="Limpiar" onAction="#handleLimpiar" style="-fx-background-color: #7f8c8d; -fx-text-fill: white;"/>
    </HBox>
</VBox>