<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #f4f7f6; -fx-padding: 30;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.admin.DashboardTotalesController">

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Dashboard de Gestión" style="-fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label text="Visualización en tiempo real de los estados de trámites y licencias." style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>
    </VBox>

    <HBox VBox.vgrow="ALWAYS" alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <PieChart fx:id="chartEstados"
                  title="Distribución de Trámites"
                  legendSide="BOTTOM"
                  labelsVisible="true"
                  HBox.hgrow="ALWAYS" />
    </HBox>

    <Label text="Nota: Los datos se actualizan automáticamente al abrir esta sección."
           style="-fx-font-style: italic; -fx-text-fill: #95a5a6; -fx-font-size: 12;"/>

</VBox>