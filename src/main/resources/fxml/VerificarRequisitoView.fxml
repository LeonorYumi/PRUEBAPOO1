<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 30; -fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.analista.VerificarRequisitoController">

    <Label text="VERIFICACIÓN DE REQUISITOS" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="ID Trámite:"/>
        <TextField fx:id="txtBusquedaId" promptText="Ingrese ID..."/>
        <Button text="Buscar" onAction="#handleBuscar" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

    <VBox spacing="15" maxWidth="400" alignment="CENTER_LEFT" style="-fx-background-color: #f9f9f9; -fx-padding: 20; -fx-border-color: #dcdde1;">
        <CheckBox fx:id="chkCertificado" text="Certificado Médico" style="-fx-font-size: 14px;"/>
        <CheckBox fx:id="chkPago" text="Comprobante de Pago" style="-fx-font-size: 14px;"/>
        <CheckBox fx:id="chkSinMultas" text="No registra multas pendientes" style="-fx-font-size: 14px;"/>

        <Label text="Observaciones:" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="txtObservaciones" prefHeight="80" promptText="Motivo de rechazo u observaciones adicionales..."/>
    </VBox>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Aprobar requisitos" onAction="#handleAprobar"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 20;"/>
        <Button text="Rechazar" onAction="#handleRechazar"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 20;"/>
        <Button text="Regresar" onAction="#handleRegresar"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-padding: 10 20;"/>
    </HBox>
</VBox>